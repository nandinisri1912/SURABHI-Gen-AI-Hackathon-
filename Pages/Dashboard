
import React, { useState, useEffect } from "react";
import { Artisan, Craft, User } from "@/entities/all";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { 
  Palette, 
  Heart, 
  TrendingUp, 
  Users, 
  Plus,
  Eye,
  MapPin,
  Clock,
  Sparkles
} from "lucide-react";
import { Badge } from "@/components/ui/badge";
import { motion } from "framer-motion";

import WelcomeSection from "../components/dashboard/WelcomeSection";
import QuickStats from "../components/dashboard/QuickStats";
import RecentCrafts from "../components/dashboard/RecentCrafts";
import AIInsights from "../components/dashboard/AIInsights";
import SampleCraftData from "../components/SampleCraftData";

export default function Dashboard() {
  const [artisan, setArtisan] = useState(null);
  const [crafts, setCrafts] = useState([]);
  const [isLoading, setIsLoading] = useState(true);
  const [currentUser, setCurrentUser] = useState(null);

  useEffect(() => {
    loadData();
  }, []);

  const loadData = async () => {
    setIsLoading(true);
    try {
      const user = await User.me();
      setCurrentUser(user);
      
      // Check if user has selected a role
      if (!user.user_role) {
        window.location.href = '/Welcome';
        return;
      }
      
      // If user is a buyer, redirect to explorer
      if (user.user_role === 'buyer') {
        window.location.href = '/Explorer';
        return;
      }
      
      // Continue with existing artisan dashboard logic
      const artisanProfiles = await Artisan.filter({ created_by: user.email });
      if (artisanProfiles.length > 0) {
        setArtisan(artisanProfiles[0]);
        
        const artisanCrafts = await Craft.filter({ artisan_id: artisanProfiles[0].id }, "-created_date", 10);
        setCrafts(artisanCrafts);
      }
    } catch (error) {
      console.error("Error loading data:", error);
      // User not logged in, redirect to Welcome page
      window.location.href = '/Welcome';
    }
    setIsLoading(false);
  };

  const stats = {
    totalCrafts: crafts.length,
    availableCrafts: crafts.filter(c => c.is_available).length,
    totalValue: crafts.reduce((sum, craft) => sum + (craft.price || 0), 0),
    avgPrice: crafts.length > 0 ? crafts.reduce((sum, craft) => sum + (craft.price || 0), 0) / crafts.length : 0
  };

  if (isLoading) {
    return (
      <div className="p-6 lg:p-8">
        <div className="max-w-7xl mx-auto space-y-6">
          {[...Array(6)].map((_, i) => (
            <div key={i} className="bg-white/50 rounded-2xl p-6 animate-pulse">
              <div className="h-6 bg-orange-200 rounded-lg w-1/3 mb-4"></div>
              <div className="h-4 bg-orange-100 rounded-lg w-2/3"></div>
            </div>
          ))}
        </div>
      </div>
    );
  }

  if (!artisan) {
    return (
      <div className="p-6 lg:p-8">
        <div className="max-w-4xl mx-auto">
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            className="text-center"
          >
            <div className="bg-white/80 backdrop-blur-sm rounded-3xl p-8 lg:p-12 shadow-lg border border-orange-100">
              <div className="w-20 h-20 bg-gradient-to-r from-pink-500 via-orange-500 to-yellow-500 rounded-full flex items-center justify-center mx-auto mb-6">
                <Heart className="w-10 h-10 text-white" />
              </div>
              <h1 className="text-3xl lg:text-4xl font-bold text-gray-800 mb-4">
                Welcome to Surabhi
              </h1>
              <p className="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
                Join India's premier digital marketplace for traditional artisans. 
                Share your craft heritage, tell your story, and connect with art lovers worldwide.
              </p>
              <div className="flex flex-col sm:flex-row gap-4 justify-center">
                <Link to={createPageUrl("Profile")}>
                  <Button className="bg-gradient-to-r from-pink-500 via-orange-500 to-yellow-500 hover:from-pink-600 hover:via-orange-600 hover:to-yellow-600 text-white px-8 py-3 text-lg rounded-xl shadow-lg hover:shadow-xl transition-all duration-300">
                    <Plus className="w-5 h-5 mr-2" />
                    Create Your Profile
                  </Button>
                </Link>
                <Link to={createPageUrl("AIHelper")}>
                  <Button variant="outline" className="border-pink-300 hover:bg-pink-50 px-8 py-3 text-lg rounded-xl">
                    <Sparkles className="w-5 h-5 mr-2 text-pink-500" />
                    Get AI Help
                  </Button>
                </Link>
              </div>
            </div>
          </motion.div>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-pink-50 via-orange-50 to-yellow-50">
      <SampleCraftData />
      
      <div className="p-6 lg:p-8 space-y-8">
        <div className="max-w-7xl mx-auto">
          <WelcomeSection artisan={artisan} />
          
          <div className="grid lg:grid-cols-4 gap-6 mb-8">
            <QuickStats stats={stats} />
          </div>

          <div className="grid lg:grid-cols-3 gap-8">
            <div className="lg:col-span-2 space-y-6">
              <RecentCrafts crafts={crafts} artisan={artisan} />
            </div>
            
            <div className="space-y-6">
              <AIInsights artisan={artisan} crafts={crafts} />
            </div>
          </div>
        </div>
      </div>
    </div>
  );
}
